<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmploymentApp.Pages.EventCreatePage"
             Title="EventCreatePage">

    <ScrollView>
        <Grid BackgroundColor="#F5F5F7" Padding="20">

            <Border Stroke="Transparent"
                    BackgroundColor="#f0f0f0"
                    StrokeThickness="0"
                    Padding="30"
                    VerticalOptions="Start">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Opacity="0.2" Radius="10"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <Label Text="Создание события" 
                           FontSize="28" 
                           HorizontalOptions="Center" 
                           TextColor="Black"/>

                    <!-- Название события -->
                    <Label Text="Название события" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding Title}" Placeholder="Например: Конференция по IT..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <!-- Описание -->
                    <Label Text="Описание" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HorizontalOptions="Fill" Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding Description}" 
                                Placeholder="Опишите событие..." 
                                PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                                HeightRequest="100" TextColor="Black"/>
                    </Border>

                    <!-- Локация -->
                    <Label Text="Локация" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding Location}" 
                               Placeholder="Адрес проведения события..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <!-- Дата события -->
                    <Label Text="Дата события" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding DateString}" 
                               Placeholder="ГГГГ-ММ-ДД" 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <!-- Время события -->
                    <Label Text="Время события" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding TimeString}" 
                               Placeholder="ЧЧ:ММ" 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <!-- Удалённое событие -->
                    <Label Text="Удаленное событие" FontSize="14" TextColor="Black"/>
                    <Grid ColumnDefinitions="Auto,*" Padding="0,5,0,0">
                        <Label Text="Да / Нет" 
                               FontSize="14" 
                               VerticalOptions="Center"
                               TextColor="Black"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsRemote}"
                                HorizontalOptions="End"/>
                    </Grid>

                    <!-- Кнопка создать событие -->
                    <Button Text="СОЗДАТЬ СОБЫТИЕ" 
                            Command="{Binding SaveEventCommand}"
                            BackgroundColor="#9dfca8" 
                            TextColor="Black" 
                            FontSize="18"
                            CornerRadius="10" 
                            HeightRequest="55" 
                            Margin="0,15,0,0"/>

                    <!-- Кнопка назад -->
                    <Button Text="Назад"
                            BackgroundColor="#e0e0e0"
                            TextColor="Black"
                            FontSize="16"
                            Padding="15,10"
                            CornerRadius="8"
                            Margin="0,10,0,0"
                            Command="{Binding NavigateBackCommand}"/>

                </VerticalStackLayout>
            </Border>

        </Grid>

    </ScrollView>

</ContentPage>