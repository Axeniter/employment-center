<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmploymentApp.Pages.LoginPage"
             Title="LoginPage">

    <Grid BackgroundColor="#F5F5F7">
        <!-- Серая карточка через Border -->
        <Border Stroke="Transparent"
               BackgroundColor="#f0f0f0"
               StrokeThickness="0"
               Margin="20"
               Padding="30"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               WidthRequest="400">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            
            <Border.Shadow>
                <Shadow Brush="Black"
                       Offset="0,2"
                       Opacity="0.2"
                       Radius="10"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="30">

                <!-- Заголовок -->
                <Label Text="Авторизация"
                       FontSize="32"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <!-- Поле почты -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Почта"
                           FontSize="14"
                           TextColor="Black"/>

                    <Border Stroke="#E0E0E0"
                            StrokeThickness="1"
                            BackgroundColor="#F8F8F8"
                            HeightRequest="50"
                            HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>

                        <Entry x:Name="EmailEntry"
                               Placeholder="Введите почту..."
                               PlaceholderColor="#999999"
                               BackgroundColor="#F8F8F8"  
                               HeightRequest="50"
                               Margin="0"
                               ClearButtonVisibility="WhileEditing"
                               TextColor="Black"/>

                    </Border>
                </VerticalStackLayout>

                <!-- Поле пароля -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Пароль"
                           FontSize="14"
                           TextColor="Black"/>

                    <Border Stroke="#E0E0E0"
                           StrokeThickness="1"
                           BackgroundColor="#F8F8F8"
                           HeightRequest="50"
                           HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>

                        <Entry x:Name="PasswordEntry"
                               Placeholder="Введите пароль..."
                               PlaceholderColor="#999999"
                               BackgroundColor="#F8F8F8"  
                               HeightRequest="50"
                               Margin="0"
                               IsPassword="True"
                               ClearButtonVisibility="WhileEditing"
                               TextColor="Black"/>

                    </Border>
                </VerticalStackLayout>

                <!-- Ссылка "нет аккаунта?" -->
                <Label x:Name="RegisterLabel"
                       Text="Нет аккаунта? Регистрация"
                       FontSize="14"
                       TextColor="Black"
                       HorizontalOptions="Start">
                    
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToRegistrationCommand}" />
                    </Label.GestureRecognizers>
                </Label>

                <!-- Кнопка ВОЙТИ -->
                <Button x:Name="LoginButton"
                        Text="ВОЙТИ"
                        BackgroundColor="#9dfca8"
                        TextColor="Black"
                        FontSize="20"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="55"
                        Margin="0,15,0,0"/>

            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentPage>
