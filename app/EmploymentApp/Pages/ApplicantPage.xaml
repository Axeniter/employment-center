<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmploymentApp.Pages.ApplicantPage"
             Title="ApplicantPage">

    <ScrollView>
        <VerticalStackLayout>
            <Grid HeightRequest="40"
                  BackgroundColor="#9dfca8">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Вакансии"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        FontSize="16"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                <Label Text="События"
                       Grid.Column="1"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       FontSize="16"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>

                <Label Text="Чат"
                       Grid.Column="3"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       FontSize="16"
                       VerticalOptions="Center"
                       HorizontalOptions="End"/>

                <Label Text="Профиль"
                       Grid.Column="4"
                       BackgroundColor="Transparent"
                       TextColor="Black"
                       FontSize="16"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>

            </Grid>

            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                               IsVisible="{Binding IsLoading}"
                               Color="#9dfca8"
                               Margin="0,20,0,0"/>

            <Grid RowDefinitions="*, Auto, Auto, Auto" 
                  ColumnDefinitions="Auto, *"
                  Padding="60,40,40,20" 
                  RowSpacing="30"
                  ColumnSpacing="40"
                  IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}, ConverterParameter=true}">

                <Border Grid.Column="0"
                        Grid.Row="0"
                        StrokeShape="RoundRectangle 100"
                        StrokeThickness="2"
                        Stroke="#333333" 
                        HeightRequest="204" 
                        WidthRequest="204"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        Margin="0,20,0,0">

                    <Image Source="dotnet_bot.png"
                           Aspect="AspectFill"
                           HeightRequest="200"
                           WidthRequest="200"/>

                </Border>

                <VerticalStackLayout Grid.Column="1"
                         Grid.Row="0"
                         VerticalOptions="Start"
                         Spacing="10">

                    <Label Text="Имя:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Label Text="{Binding FirstName}"
                           FontSize="20"
                           TextColor="#212121"/>

                    <Label Text="Фамилия:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Label Text="{Binding LastName}"
                           FontSize="20"
                           TextColor="#212121"/>

                    <Label Text="Номер телефона:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Label Text="{Binding PhoneNumber}"
                           FontSize="20"
                           TextColor="#212121"/>

                    <Label Text="Город:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Label Text="{Binding City}"
                           FontSize="20"
                           TextColor="#212121"/>

                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Spacing="10">
                    <Label Text="О себе:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Label Text="{Binding About}"
                           FontSize="20"
                           TextColor="#212121"/>

                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Spacing="10">
                    <Label Text="Навыки:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Label Text="{Binding SkillsText}"
                           FontSize="20"
                           TextColor="#212121"/>

                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Spacing="10">
                    <Label Text="Дата рождения:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                    <Label Text="{Binding BirthDate}"
                           FontSize="20"
                           TextColor="#212121"/>

                </VerticalStackLayout>

            </Grid>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>