<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmploymentApp.Pages.RegistrationPage"
             Title="RegistrationPage">

    <Grid BackgroundColor="#F5F5F7">
        <!-- Серая карточка через Border -->
        <Border Stroke="Transparent"
               BackgroundColor="#f0f0f0"
               StrokeThickness="0"
               Margin="20"
               Padding="30"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               WidthRequest="400">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black"
                       Offset="0,2"
                       Opacity="0.2"
                       Radius="10"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="25">

                <!-- Заголовок -->
                <Label Text="Регистрация"
                       FontSize="28"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <!-- Переключатель соискатель/работодатель -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="10">

                    <!-- Соискатель -->
                    <Border x:Name="ApplicantBorder"
                           Stroke="Transparent"
                           BackgroundColor="#9dfca8"
                           StrokeThickness="0"
                           HeightRequest="50"
                           HorizontalOptions="Fill"
                           Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ApplicantBorder_Tapped" />
                        </Border.GestureRecognizers>

                        <Label Text="соискатель"
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="Black"/>
                    </Border>

                    <!-- Работодатель -->
                    <Border x:Name="EmployerBorder"
                           Grid.Column="1"
                           Stroke="Transparent"
                           BackgroundColor="#e0e0e0"
                           StrokeThickness="0"
                           HeightRequest="50"
                           HorizontalOptions="Fill"
                           Padding="0">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="EmployerBorder_Tapped" />
                        </Border.GestureRecognizers>

                        <Label Text="работодатель"
                               FontSize="16"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="Black"/>
                    </Border>
                </Grid>

                <!-- Поле почты -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Почта"
                           FontSize="14"
                           TextColor="Black"/>

                    <Border Stroke="#E0E0E0"
                            StrokeThickness="1"
                            BackgroundColor="#F8F8F8"
                            HeightRequest="50"
                            HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry x:Name="EmailEntry"
                               Placeholder="Введите почту..."
                               PlaceholderColor="#999999"
                               BackgroundColor="#F8F8F8"  
                               HeightRequest="50"
                               Margin="0"
                               ClearButtonVisibility="WhileEditing"
                               TextColor="Black"/>

                    </Border>
                </VerticalStackLayout>

                <!-- Поле пароля -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Пароль"
                           FontSize="14"
                           TextColor="Black"/>

                    <Border Stroke="#E0E0E0"
                           StrokeThickness="1"
                           BackgroundColor="#F8F8F8"
                           HeightRequest="50"
                           HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry x:Name="PasswordEntry"
                               Placeholder="Введите пароль..."
                               PlaceholderColor="#999999"
                               BackgroundColor="#F8F8F8"  
                               HeightRequest="50"
                               Margin="0"
                               IsPassword="True"
                               ClearButtonVisibility="WhileEditing"
                               TextColor="Black"/>

                    </Border>
                </VerticalStackLayout>

                <!-- Поле повторного пароля -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Повторите пароль"
                           FontSize="14"
                           TextColor="Black"/>

                    <Border Stroke="#E0E0E0"
                           StrokeThickness="1"
                           BackgroundColor="#F8F8F8"
                           HeightRequest="50"
                           HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry x:Name="ConfirmPasswordEntry"
                               Placeholder="Повторите пароль..."
                               PlaceholderColor="#999999"
                               BackgroundColor="#F8F8F8"  
                               HeightRequest="50"
                               Margin="0"
                               IsPassword="True"
                               ClearButtonVisibility="WhileEditing"
                               TextColor="Black"/>

                    </Border>
                </VerticalStackLayout>

                <!-- Ссылка "есть аккаунт?" -->
                <Label x:Name="LoginLabel"
                       Text="есть аккаунт? войти"
                       FontSize="14"
                       TextColor="Black"
                       HorizontalOptions="Start">
                    
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LoginLabel_Tapped" />
                    </Label.GestureRecognizers>
                </Label>


                <!-- Кнопка ЗАРЕГИСТРИРОВАТЬСЯ -->
                <Button x:Name="RegisterButton"
                        Text="ЗАРЕГИСТРИРОВАТЬСЯ"
                        BackgroundColor="#9dfca8"
                        TextColor="Black"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="55"
                        Margin="0,10,0,0"
                        BorderColor="Transparent"
                        BorderWidth="0"
                        Clicked="RegisterButton_Clicked"/>       

            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentPage>
