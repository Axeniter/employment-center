<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmploymentApp.Pages.ApplicantCreateProfilePage"
             Title="ApplicantCreateProfilePage">
    
    <ScrollView>
        <Grid BackgroundColor="#F5F5F7" Padding="20">

            <Border Stroke="Transparent"
                    BackgroundColor="#f0f0f0"
                    StrokeThickness="0"
                    Padding="30"
                    VerticalOptions="Start">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Opacity="0.2" Radius="10"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <Label Text="Создание профиля" 
                           FontSize="28" 
                           HorizontalOptions="Center" 
                           TextColor="Black"/>

                    <Label Text="Имя" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding FirstName}" Placeholder="Введите имя..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <Label Text="Фамилия" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding LastName}" Placeholder="Введите фамилию..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <Label Text="Отчество" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding MiddleName}" Placeholder="Введите отчество..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <Label Text="Номер телефона" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        
                        <Entry Text="{Binding PhoneNumber}" Placeholder="+7 (999) 999-99-99" 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               Keyboard="Telephone" ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <Label Text="Дата рождения" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        
                        <Entry Text="{Binding BirthDateString}" Placeholder="ГГГГ-ММ-ДД" 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <Label Text="Город" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding City}" Placeholder="Введите город..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <Label Text="О себе" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HorizontalOptions="Fill" Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding About}" Placeholder="Расскажите о себе..." 
                                PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                                HeightRequest="100" TextColor="Black"/>
                    </Border>

                    <Label Text="Навыки (через запятую)" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HorizontalOptions="Fill" Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding SkillsText}" 
                                Placeholder="C#, MAUI, SQL..." 
                                PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                                HeightRequest="80" TextColor="Black"/>
                    </Border>

                    <Button Text="СОХРАНИТЬ ПРОФИЛЬ" 
                            Command="{Binding SaveProfileCommand}"
                            BackgroundColor="#9dfca8" 
                            TextColor="Black" 
                            FontSize="18"
                            FontAttributes="Bold" 
                            CornerRadius="10" 
                            HeightRequest="55" 
                            Margin="0,15,0,0"/>

                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>

</ContentPage>