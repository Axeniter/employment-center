<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmploymentApp.Pages.VacancyCreatePage"
             Title="VacancyCreatePage">

    <ScrollView>
        <Grid BackgroundColor="#F5F5F7" Padding="20">

            <Border Stroke="Transparent"
                    BackgroundColor="#f0f0f0"
                    StrokeThickness="0"
                    Padding="30"
                    VerticalOptions="Start">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Opacity="0.2" Radius="10"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <Label Text="Создание вакансии" 
                           FontSize="28" 
                           HorizontalOptions="Center" 
                           TextColor="Black"/>

                    <!-- Название вакансии -->
                    <Label Text="Название вакансии" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry Text="{Binding Title}" Placeholder="Вакансия строитель..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <!-- Описание -->
                    <Label Text="Описание" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HorizontalOptions="Fill" Padding="0">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Editor Text="{Binding Description}" 
                                Placeholder="Неполный рабочий день, 5/2..." 
                                PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                                HeightRequest="100" TextColor="Black"/>
                    </Border>

                    <!-- Теги -->
                    <Label Text="Теги (через запятую)" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HorizontalOptions="Fill" Padding="0">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Editor Text="{Binding TagsText}" 
                                Placeholder="город, стройка..." 
                                PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                                HeightRequest="80" TextColor="Black"/>
                    </Border>

                    <!-- Зарплата от -->
                    <Label Text="Зарплата от" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry Text="{Binding SalaryFromString}" 
                               Placeholder="40000" 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               Keyboard="Numeric" ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <!-- Зарплата до -->
                    <Label Text="Зарплата до" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry Text="{Binding SalaryToString}" 
                               Placeholder="55000" 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               Keyboard="Numeric" ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <!-- Валюта -->
                    <Label Text="Валюта" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry Text="{Binding SalaryCurrency}" 
                               Placeholder="RUB" 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <!-- Локация -->
                    <Label Text="Локация" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Entry Text="{Binding Location}" 
                               Placeholder="Луговая 32..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" 
                               TextColor="Black"/>
                    </Border>

                    <!-- Удалённая работа -->
                    <Label Text="Удаленная работа" FontSize="14" TextColor="Black"/>

                    <Grid ColumnDefinitions="Auto,*" Padding="0,5,0,0">
                        <Label Text="Да / Нет" 
                               FontSize="14" 
                               VerticalOptions="Center"
                               TextColor="Black"/>
                        <Switch Grid.Column="1"
                                IsToggled="{Binding IsRemote}"
                                HorizontalOptions="End"/>
                    </Grid>

                    <!-- Кнопка сохранить -->
                    <Button Text="СОЗДАТЬ ВАКАНСИЮ" 
                            Command="{Binding SaveVacancyCommand}"
                            BackgroundColor="#9dfca8" 
                            TextColor="Black" 
                            FontSize="18"
                            CornerRadius="10" 
                            HeightRequest="55" 
                            Margin="0,15,0,0"/>

                    <Button Text="Назад"
                            BackgroundColor="#e0e0e0"
                            TextColor="Black"
                            FontSize="16"
                            Padding="15,10"
                            CornerRadius="8"
                            Margin="0,10,0,0"
                            Command="{Binding NavigateBackCommand}"/>

                </VerticalStackLayout>
            </Border>

        </Grid>

    </ScrollView>

</ContentPage>