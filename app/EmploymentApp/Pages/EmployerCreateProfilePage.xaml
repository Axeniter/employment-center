<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmploymentApp.Pages.EmployerCreateProfilePage"
             Title="EmployerCreateProfilePage">

    <ScrollView>
        <Grid BackgroundColor="#F5F5F7" Padding="20">

            <Border Stroke="Transparent"
                    BackgroundColor="#f0f0f0"
                    StrokeThickness="0"
                    Padding="30"
                    VerticalOptions="Start">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Opacity="0.2" Radius="10"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <Label Text="Создание профиля" 
                           FontSize="28" 
                           HorizontalOptions="Center" 
                           TextColor="Black"/>

                    <Label Text="Название компании" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HeightRequest="50" HorizontalOptions="Fill">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry Text="{Binding CompanyName}" Placeholder="Введите название компании..." 
                               PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                               ClearButtonVisibility="WhileEditing" TextColor="Black"/>
                    </Border>

                    <Label Text="Описание компании" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HorizontalOptions="Fill" Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding Description}" Placeholder="Расскажите о компании..." 
                                PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                                HeightRequest="120" TextColor="Black"/>
                    </Border>

                    <Label Text="Контактная информация" FontSize="14" TextColor="Black"/>
                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#F8F8F8" 
                            HorizontalOptions="Fill" Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Editor Text="{Binding Contact}" Placeholder="Email, телефон, веб-сайт..." 
                                PlaceholderColor="#999999" BackgroundColor="#F8F8F8" 
                                HeightRequest="100" TextColor="Black"/>
                    </Border>

                    <Button Text="СОХРАНИТЬ ПРОФИЛЬ" 
                            Command="{Binding SaveProfileCommand}"
                            BackgroundColor="#9dfca8" 
                            TextColor="Black" 
                            FontSize="18"
                            FontAttributes="Bold" 
                            CornerRadius="10" 
                            HeightRequest="55" 
                            Margin="0,15,0,0"/>

                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>

</ContentPage>