<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmploymentApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EmploymentApp"
    xmlns:pages="clr-namespace:EmploymentApp.Pages"
    Title="EmploymentApp">

    <ShellContent
        ContentTemplate="{DataTemplate pages:ApplicantPage}"
        Route="ApplicantPage"/>

    <ShellContent
        ContentTemplate="{DataTemplate pages:EmployerPage}"
        Route="EmployerPage"/>

    <ShellContent
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:RegistrationPage}"
        Route="RegistrationPage" />

</Shell>
