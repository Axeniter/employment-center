<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmploymentApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EmploymentApp"
    xmlns:pages="clr-namespace:EmploymentApp.Pages"
    Title="EmploymentApp">
    
    <ShellContent
        Title="Login page"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    
    <ShellContent
        Title="Applicant page"
        ContentTemplate="{DataTemplate pages:ApplicantPage}"
        Route="ApplicantPage"/>

    <ShellContent
        Title="Employer page"
        ContentTemplate="{DataTemplate pages:EmployerPage}"
        Route="EmployerPage"/>

    <ShellContent
        Title="Registration page"
        ContentTemplate="{DataTemplate pages:RegistrationPage}"
        Route="RegistrationPage" />

    <ShellContent
        Title="ApplicantCreateProfilePage"
        ContentTemplate="{DataTemplate pages:ApplicantCreateProfilePage}"
        Route="ApplicantCreateProfilePage" />

    <ShellContent
        Title="EmployerCreateProfilePage"
        ContentTemplate="{DataTemplate pages:EmployerCreateProfilePage}"
        Route="EmployerCreateProfilePage" />

</Shell>
